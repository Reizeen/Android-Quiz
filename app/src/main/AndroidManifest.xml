<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ericarias.quiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Controller.RecoverPass"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Profile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.EndQuiz"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Quiz"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Roulette"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.EditQuestion"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.ViewQuestions"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Ranking"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.AddQuestion"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Main"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Register"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Start"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>