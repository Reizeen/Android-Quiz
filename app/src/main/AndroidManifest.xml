<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericarias.quiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.RecoverPass"></activity>
        <activity android:name=".Controller.Profile" />
        <activity android:name=".Controller.EndQuiz" />
        <activity android:name=".Controller.Quiz" />
        <activity android:name=".Controller.Roulette" />
        <activity android:name=".Controller.EditQuestion" />
        <activity android:name=".Controller.ViewQuestions" />
        <activity android:name=".Controller.Ranking" />
        <activity android:name=".Controller.AddQuestion" />
        <activity android:name=".Controller.Login" />
        <activity android:name=".Controller.Main" />
        <activity android:name=".Controller.Register" />
        <activity
            android:name=".Controller.Start"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>